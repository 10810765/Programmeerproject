<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/matchImage"
                android:layout_width="100px"
                android:layout_height="100px" />

            <TextView
                android:id="@+id/dateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event name" />

            <TextView
                android:id="@+id/urlView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link to event" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/streamImage"
                android:layout_width="100px"
                android:layout_height="100px" />

            <TextView
                android:id="@+id/streamTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream title" />

            <TextView
                android:id="@+id/streamerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streamer name" />

            <TextView
                android:id="@+id/viewerCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount of viewers" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>